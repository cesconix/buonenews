---
interface Props {
  node: {
    level: number;
  };
}

const { node } = Astro.props;

const cssClasses: Record<string, string> = {
  "1": "text-slate-900 font-medium tracking-tight text-2xl md:text-4xl my-6 md:my-8 px-6",
};

const Tag = `h${node.level}`;
---
<Tag class:list={[cssClasses[String(node.level)]]}>
  <slot />
</Tag>
